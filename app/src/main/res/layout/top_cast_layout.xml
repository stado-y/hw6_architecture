<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/standart_corner_radius"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_corners_shape"
        >


        <ImageView
            android:id="@+id/actorPhotoImageView"
            style="@style/image_style"
            android:layout_width="@dimen/actor_photo_image_width"
            android:layout_height="@dimen/actor_photo_image_height"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actorNameTextView"
            style="@style/text_style.header.movie_list_item"
            android:lines="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/standart_margin" >
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actorRolesTextView"
            android:layout_gravity="center"
            android:autoSizeMaxTextSize="@dimen/recycler_overview_text_height"
            android:layout_marginBottom="@dimen/standart_margin"
            style="@style/text_style.overview_movie_list_item" >
        </androidx.appcompat.widget.AppCompatTextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>